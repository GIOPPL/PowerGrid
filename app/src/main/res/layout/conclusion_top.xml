<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_rect_black"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_main_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_main_light"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/light" />

            <TextView
                android:id="@+id/tv_conclusion_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="光照:"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_main_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/model" />

            <TextView
                android:id="@+id/tv_conclusion_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模式:"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_main_power"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/total_power" />

            <TextView
                android:id="@+id/tv_conclusion_totalPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总发电:"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>