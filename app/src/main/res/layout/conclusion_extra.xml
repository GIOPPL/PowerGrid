                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_con_GFZGL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="65dp"
                android:text="光伏总功率:"
                android:textColor="#000000"
                android:textSize="10sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
